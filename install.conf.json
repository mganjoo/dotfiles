[
    {
        "clean": ["~"]
    },
    {
        "shell": [
            ["mkdir -p ~/.vim-backup ~/.vim-swap", "Creating vim temporary directories"],
            ["touch ~/.gitconfig_local", "Creating local .gitconfig override"],
            ["touch ~/.pentadactylrc.custom", "Creating local .pentadactylrc override"],
            ["mkdir -p ~/.hydra.local", "Creating hydra override directory"]
        ]
    },
    {
        "link": {
            "~/.dotfiles": "",
            "~/.gitconfig": "gitconfig",
            "~/.gitignore_global": "gitignore_global",
            "~/.git.scmbrc": "git.scmbrc",
            "~/.fzf": "fzf",
            "~/.haskeline": "haskeline",
            "~/.scm_breeze": "scm_breeze",
            "~/.agignore": "gitignore_global",
            "~/.aprc": "aprc",
            "~/.pryrc": "pryrc",
            "~/.gemrc": "gemrc",
            "~/.ctags": "ctags",
            "~/.inputrc": "inputrc",
            "~/.editrc": "editrc",
            "~/.pentadactylrc": "pentadactylrc",
            "~/.pentadactyl": "pentadactyl",
            "~/.tmux.conf": "tmux.conf",
            "~/.tmux-powerlinerc": "tmux-powerlinerc",
            "~/.tmux": "tmux",
            "~/.vim": "vim",
            "~/.vimrc": "vimrc",
            "~/.gvimrc": "gvimrc",
            "~/.zsh": "zsh",
            "~/.zshrc": "zshrc"
        }
    }
]
