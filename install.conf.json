[
    {
        "clean": ["~"]
    },
    {
        "shell": [
            ["mkdir -p ~/.vim-backup ~/.vim-swap", "Creating vim temporary directories"],
            ["touch ~/.gitconfig_local", "Creating local .gitconfig override"]
        ]
    },
    {
        "link": {
            "~/.dotfiles": "",
            "~/.gitconfig": "gitconfig",
            "~/.gitignore_global": "gitignore_global",
            "~/.agignore": "gitignore_global",
            "~/.tmux.conf": "tmux.conf",
            "~/.tmux-powerlinerc": "tmux-powerlinerc",
            "~/.tmux": "tmux",
            "~/.vim": "vim",
            "~/.vimrc": "vimrc",
            "~/.gvimrc": "gvimrc",
            "~/.zsh": "zsh",
            "~/.zshrc": "zshrc"
        }
    },
    {
        "shell": [
            ["git submodule update --init --recursive", "Installing submodules"]
        ]
    }
]
