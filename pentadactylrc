" Set Google as default search engine
set defsearch="google"

" Set MacVim as default editor on Mac (note: may have to override path)
if io.system("uname -s") == "Darwin"
  set editor="/usr/local/bin/mvim -f +<line> +\"sil! call cursor(0, <column>)\" <file>"
endif

" == Searching ==

" Find as we type
set incfind
" Highlight matches
set hlfind
" Use smartcase for matches
set findcase=smart

" == Appearance ==

" Show explicit title bar
set! browser.tabs.drawInTitlebar=false
" Don't show tabs
set showtabline=never
" Set font size for hints
highlight Hint font: bold 13px "Droid Sans Mono", monospace !important; margin: -.2ex; padding: 0 0 0 1px; outline: 1px solid rgba(0, 0, 0, .5); background: rgba(255, 248, 231, .9); color: black;

" == Key bindings ==

" Refresh screen also clears highlights
nmap -builtin <silent> <C-l> :<C-u>nohlfind<CR><C-l>
" Shortcut to toggle toolbar
nmap -builtin <silent> cot :set guioptions!=T<CR><C-l>
" Hide tab bar
nmap -builtin <silent> cob :set buftabs!<CR><C-l>
" Evernote Clearly shortcut (must be installed)
nmap -builtin <silent> gr :emenu Tools.Clearly<CR>
" Ignore keys on certain websites
set passkeys+=mail.google.com:jknpoumxs!ra#vlIzNqyc/<CR>,gi,ga,gs,gd,gl,gt,*a,*n,*r,*u,*s,*t

" Load any custom settings
source ~/.pentadactylrc.custom

" vim: ft=vim
