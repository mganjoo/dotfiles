{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {},
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "command": "terminal-notifier -title 'Claude Code' -message 'Claude Code is awaiting your input' -activate 'com.mitchellh.ghostty'",
            "type": "command"
          }
        ],
        "matcher": ""
      }
    ]
  },
  "includeCoAuthoredBy": false,
  "model": "opusplan",
  "permissions": {
    "allow": [],
    "deny": []
  },
  "statusLine": {
    "command": "npx -y ccstatusline@latest",
    "padding": 0,
    "type": "command"
  }
}